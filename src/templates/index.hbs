<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Axum + Bootstrap Demo</title>

  <!-- Bootstrap 5 CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
        rel="stylesheet"
        integrity="sha384-9ndCyUa9TC9xC0zLaC9h9k3dR1dV9g6k2eV6F9B5L9R6Y6Z7e8f5R7z5v6x5f5f"
        crossorigin="anonymous">

  <style>
    body { padding-top: 3rem; }
    .container { max-width: 720px; }
  </style>
</head>
<body>
<div class="container">

  <h1 class="mb-4">BeeAnnot: Browsable Axum Graph based server for beed functional genomics</h1>

  {{#if success}}
    <div class="alert alert-success" role="alert">
      <strong>Success!</strong> You submitted: <code>{{transcript}}</code>).
    </div>
  {{/if}}

  {{#if errors}}
    <div class="alert alert-danger" role="alert">
      <strong>Errors:</strong>
      <ul class="mb-0">
        {{#each errors}}
          <li>{{this}}</li>
        {{/each}}
      </ul>
    </div>
  {{/if}}

  <form method="post" action="/" class="needs-validation" novalidate>
    <div class="mb-3">
      <label for="name" class="form-label">transcript name</label>
      <input type="text" class="form-control" id="transcript" name="transcript"
             value="{{form.name}}" required>
      <div class="invalid-feedback">Please provide a name.</div>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
  </form>

</div>

<!-- Bootstrap JS (optional, for interactive components) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+0sZqPKA5Y5Y5f5u5p5v5f5u5p5v"
        crossorigin="anonymous"></script>

<script>
  // Enable Bootstrap client-side validation
  (function () {
    'use strict';
    const forms = document.querySelectorAll('.needs-validation');
    Array.from(forms).forEach(form => {
      form.addEventListener('submit', event => {
        if (!form.checkValidity()) {
          event.preventDefault();
          event.stopPropagation();
        }
        form.classList.add('was-validated');
      }, false);
    });
  })();
</script>
</body>
</html>
